generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}


model movie {
  id         String     @id @default(uuid())
  name       String     @unique
  genre      genreMovie
  duration   Int
  rating     Int
  createDate DateTime   @default(now())
}

enum genreMovie {
  Drama
  Action
  Comedy
}
